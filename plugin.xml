<?xml version='1.0' encoding='utf-8'?>
<plugin id="community-cordova-plugin-printer" version="1.0.0"
    xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <name>community-cordova-plugin-printer</name>
    <description>Cordova plugin to print documents, images and web pages</description>
    <license>MIT</license>
    <keywords>cordova,plugin,printer,print,community</keywords>
    <repo>https://github.com/EYALIN/community-cordova-plugin-printer.git</repo>
    <issue>https://github.com/EYALIN/community-cordova-plugin-printer/issues</issue>

    <engines>
        <engine name="cordova" version=">=9.0.0" />
        <engine name="cordova-android" version=">=10.0.0" />
        <engine name="cordova-ios" version=">=6.0.0" />
    </engines>

    <js-module name="Printer" src="www/printer.js">
        <clobbers target="cordova.plugins.printer" />
    </js-module>

    <!-- iOS -->
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="Printer">
                <param name="ios-package" value="PrinterPlugin" />
            </feature>
        </config-file>

        <header-file src="src/ios/PrinterPlugin.h" />
        <source-file src="src/ios/PrinterPlugin.m" />
        <header-file src="src/ios/PrinterManager.h" />
        <source-file src="src/ios/PrinterManager.m" />

        <framework src="UIKit.framework" />
    </platform>

    <!-- Android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="Printer">
                <param name="android-package" value="com.community.cordova.printer.PrinterPlugin" />
            </feature>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28" />
            <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
        </config-file>

        <source-file src="src/android/PrinterPlugin.java" target-dir="src/com/community/cordova/printer" />
        <source-file src="src/android/PrinterManager.java" target-dir="src/com/community/cordova/printer" />

        <framework src="androidx.annotation:annotation:1.3.0" />
    </platform>

    <!-- Browser -->
    <platform name="browser">
        <js-module name="PrinterProxy" src="src/browser/PrinterProxy.js">
            <runs />
        </js-module>
    </platform>

</plugin>
